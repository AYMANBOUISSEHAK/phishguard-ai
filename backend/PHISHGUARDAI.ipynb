@app.route("/detect", methods=["POST"])
def detect_phishing():
    data = request.get_json()
    text = data.get("text", "")

    if not text:
        return jsonify({"error": "no text provided"}), 400

    text_lower = text.lower()

    # 1. D√©tection mots-cl√©s exacts
    detected_keywords = [
        k for k in phishing_keywords if k.lower() in text_lower
    ]

    # NORMALISATION : calcul du ratio de mots-cl√©s par rapport √† la longueur du texte
    word_count = len(text.split())
    if word_count > 0:
        keyword_ratio = len(detected_keywords) / min(word_count, 20)  # Limit√© √† 20 mots pour √©viter trop faible ratio
    else:
        keyword_ratio = len(detected_keywords)

    # Score mots-cl√©s normalis√©
    keyword_score = min(keyword_ratio * 2.0, 1.0)  # Ratio transform√© en score 0-1

    # 2. URLs suspectes
    detected_urls = []
    found_urls = extract_urls(text)
    for url in found_urls:
        score, similar_url = retrieve_similar_url(url)
        if score > 0.80:
            detected_urls.append(similar_url)

    # Score URL : pr√©sence d'URL suspecte est fort indicateur
    url_score = 1.0 if len(detected_urls) > 0 else 0.0

    # 3. Similarit√©s avec mails de phishing ‚Üí D√©sactiv√© sur texte tr√®s court
    similar_phrases = []
    # Protection contre les inputs trop courts (URL seule, quelques mots...)
    if len(text) >= 60 and len(text.split()) >= 8:
        for example in phishing_examples:
            if similarity(text, example) > 0.45:
                similar_phrases.append(example)

    # Score similarit√© : normalis√© par nombre de similarit√©s trouv√©es
    similarity_count = len(similar_phrases)
    if similarity_count > 0:
        # Plus de 2 similarit√©s = fort indicateur, mais p√©nalis√© si texte long
        similarity_score = min(similarity_count * 0.5, 1.0)

        if word_count > 30:
            similarity_score *= 0.7
    else:
        similarity_score = 0.0

    # 4. Score FINAL
    score = (
        keyword_score * 0.25 +
        url_score * 0.35 +
        similarity_score * 0.40
    )

    # 5. Ajustements contextuels
    # Si pas d'URL suspecte ET texte court ‚Üí r√©duire le score
    if len(detected_urls) == 0 and word_count < 15:
        score *= 0.6

    # Si plusieurs mots-cl√©s mais texte tr√®s long
    if len(detected_keywords) >= 3 and word_count > 50:
        score *= 0.7

    probability = min(1.0, score)
    probability_pct = int(probability * 100)

    # 6. Verdict avec seuils
    if probability_pct >= 75:
        verdict = "PHISHING TR√àS PROBABLE"
        risk_level = "danger"
    elif probability_pct >= 55:
        verdict = "Phishing probable"
        risk_level = "warning"
    elif probability_pct >= 35:
        verdict = "Suspicieux"
        risk_level = "caution"
    else:
        verdict = "Probablement l√©gitime"
        risk_level = "safe"

    # 7. URLs trouv√©es
    found_urls = extract_urls(text)

    return jsonify({
        "verdict": verdict,
        "risk_level": risk_level,
        "probability": probability_pct,
        "keywords": detected_keywords,
        "similar_examples": similar_phrases,
        "suspicious_urls": detected_urls,
        "found_urls": found_urls,
        "analysis_details": {
            "keyword_score": f"{keyword_score:.2f}",
            "url_score": f"{url_score:.2f}",
            "similarity_score": f"{similarity_score:.2f}",
            "total_score": f"{score:.2f}",
            "word_count": word_count,
            "keyword_ratio": f"{keyword_ratio:.2f}"
        }
    })

